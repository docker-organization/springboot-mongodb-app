node {
     def buildNumber = BUILD_NUMBER
     def mvnHome = tool 'maven-build'

    stage ("checkout")  {
    git credentialsId: 'git-authentication-jenkins-login', url: 'https://github.com/docker-organization/springboot-mongodb-app.git'
    }


  stage ('build')  {
    sh "${mvnHome}/bin/mvn clean install "
    }

    stage('Build Docker Image'){
        sh "docker build . -t agunu2025/mongodbspring-application:${buildNumber}"
    }

     stage('Push Docker Image'){
         withCredentials([string(credentialsId: 'dockerAuthenticationpublic', variable: 'dockerAuthenticationpublic')])  {
          sh "docker login -u agunu2025 -p ${dockerAuthenticationpublic}"
        }
        sh "docker push agunu2025/mongodbspring-application:${buildNumber} "
     }

      stage("Deploy To plab02"){
      sh "chmod +x global.yml docker-compose-plab02.yml  "
      def dockerRun = "docker-compose -f global.yml -f docker-compose-plab02.yml  up"
      sshagent(['aws-private-key-connection']) {
       sh "scp -o StrictHostKeyChecking=no global.yml docker-compose-plab02.yml  ec2-user@18.216.238.46:/home/ec2-user/ ${dockerRun}"
       }
      }

      stage("Deploy To qlab02"){
      sshagent(['SSH_PRIVATE_KEY_docker']) {
        sh "scp -o StrictHostKeyChecking=no global.yml docker-compose-qlab02.yml  ec2-user@3.141.10.50:/home/ec2-user/"
       }
       sh "ssh ec2-user@3.141.10.50 docker-compose -f global.yml -f docker-compose-qlab02.yml  up "
      }

}

node {
     def buildNumber = BUILD_NUMBER
     def mvnHome = tool 'maven-build'

    stage ("checkout")  {
    git credentialsId: 'git-authentication-jenkins-login', url: 'https://github.com/docker-organization/springboot-mongodb-app.git'
    }


  stage ('build')  {
    sh "${mvnHome}/bin/mvn clean install "
    }

    stage('Build Docker Image'){
        sh "docker build . -t agunu2025/mongodbspring-application:${buildNumber}"
    }

     stage('Push Docker Image'){
         withCredentials([string(credentialsId: 'dockerAuthenticationpublic', variable: 'dockerAuthenticationpublic')])  {
          sh "docker login -u agunu2025 -p ${dockerAuthenticationpublic}"
        }
        sh "docker push agunu2025/mongodbspring-application:${buildNumber} "
     }


    stage('Remove Docker Image'){
        sh "docker rmi -f agunu2025/mongodbspring-application:${buildNumber} "
       }


  stage("Deploy To Kuberates Cluster"){
      withKubeConfig(credentialsId: 'kubeConfig') {
      sh 'kubectl apply -f springBootMongo.yml'
      }
    }
}
